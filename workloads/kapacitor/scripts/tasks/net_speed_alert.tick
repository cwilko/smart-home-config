dbrp "telegraf"."autogen"

var topic = 'home'

stream
    |from()
        .measurement('speedtest')
    |alert()
        .stateChangesOnly()
        .warn(lambda: float("download") / 1000.0 / 1000.0 <  20.0)
        .crit(lambda: float("download") / 1000.0 / 1000.0 <  10.0)
        .message('{{ .Level }}: Network bandwidth is low')
        .topic(topic)
        .mqtt('events/' + topic + '/bandwidth')